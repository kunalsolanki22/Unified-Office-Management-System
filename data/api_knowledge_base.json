      "auth_required": true,
      "user_accessible": true,
      "category": "authentication",
      "request_body": {
        "current_password": {
          "type": "string",
          "required": true,
          "description": "Current password"
        },
        "new_password": {
          "type": "string",
          "required": true,
          "description": "New password (min 8 characters)"
        }
      },
      "response_fields": ["message"],
      "usage_example": "I want to change my password"
    },
    "AUTH_REFRESH": {
      "api_id": "AUTH_REFRESH",
      "name": "Refresh Token",
      "description": "Get new access token using refresh token",
      "short_description": "Refresh access token",
      "endpoint": "/auth/refresh",
