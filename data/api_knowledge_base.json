    "IT_REQUEST_CREATE": {
      "api_id": "IT_REQUEST_CREATE",
      "name": "Create IT Request",
      "description": "Create a new IT support request for new asset, repair, software installation, access request, etc.",
      "short_description": "Submit IT support request",
      "endpoint": "/it-requests",
      "method": "POST",
      "auth_required": true,
      "user_accessible": true,
      "category": "it_requests",
      "request_body": {
        "request_type": {
          "type": "enum",
          "required": true,
          "enum_values": ["NEW", "NEW_ASSET", "REPAIR", "REPLACEMENT", "SOFTWARE_INSTALL", "ACCESS_REQUEST", "NETWORK_ISSUE", "OTHER"],
          "description": "Type of IT request"
        },
        "title": {
          "type": "string",
          "required": true,
          "description": "Short title for the request",
          "auto_fill": true
        },
        "description": {
          "type": "string",
          "required": true,
          "description": "Detailed description of the request (min 10 characters)",
          "auto_fill": true
        },
        "priority": {
          "type": "enum",
          "required": false,
          "enum_values": ["LOW", "MEDIUM", "HIGH", "URGENT"],
          "default": "MEDIUM",
          "description": "Request priority"
        },
        "related_asset_code": {
          "type": "string",
          "required": false,
          "description": "Asset code if request relates to existing asset (e.g., LAP-001)"
        }
