    "LEAVE_CREATE": {
      "api_id": "LEAVE_CREATE",
      "name": "Create Leave Request",
      "description": "Create a new leave request for approval. Supports casual, sick, annual, unpaid, maternity, paternity, bereavement leave types.",
      "short_description": "Apply for leave",
      "endpoint": "/leave/requests",
      "method": "POST",
      "auth_required": true,
      "user_accessible": true,
      "category": "leave",
      "request_body": {
        "leave_type": {
          "type": "enum",
          "required": true,
          "enum_values": ["casual", "sick", "annual", "unpaid", "maternity", "paternity", "bereavement"],
          "description": "Type of leave"
        },
        "start_date": {
          "type": "date",
          "required": true,
          "description": "Leave start date (YYYY-MM-DD, cannot be past)"
        },
        "end_date": {
          "type": "date",
          "required": true,
          "description": "Leave end date (YYYY-MM-DD, must be >= start_date)"
        },
        "reason": {
          "type": "string",
          "required": false,
          "description": "Reason for leave (auto-filled based on leave type if not provided)",
          "auto_fill": true
        },
        "is_half_day": {
          "type": "boolean",
          "required": false,
          "default": false,
          "description": "Whether it's a half day leave",
          "auto_fill": true
        },
        "half_day_type": {
          "type": "enum",
          "required": false,
          "enum_values": ["first_half", "second_half"],
          "description": "Required if is_half_day is true"
        }
      },
      "response_fields": ["id", "leave_type", "start_date", "end_date", "total_days", "status"],
      "usage_example": "I want to apply for 2 days casual leave from tomorrow"
    },
    "LEAVE_MY": {
      "api_id": "LEAVE_MY",
      "name": "My Leave Requests",
      "description": "Get current user's leave request history",
      "short_description": "View my leave requests",
      "endpoint": "/leave/requests/my",
      "method": "GET",
      "auth_required": true,
      "user_accessible": true,
      "category": "leave",
      "query_params": {
        "page": {
          "type": "integer",
          "required": false,
          "default": 1
        },
        "page_size": {
          "type": "integer",
          "required": false,
          "default": 20
        },
        "status": {
          "type": "enum",
          "required": false,
          "enum_values": ["pending", "approved", "rejected", "cancelled"]
        }
      },
      "response_fields": ["data", "total", "page", "page_size"],
      "usage_example": "Show my leave history"
    },
    "LEAVE_CANCEL": {
      "api_id": "LEAVE_CANCEL",
      "name": "Cancel Leave Request",
      "description": "Cancel own pending leave request",
      "short_description": "Cancel my leave request",
      "endpoint": "/leave/requests/{request_id}/cancel",
      "method": "POST",
      "auth_required": true,
      "user_accessible": true,
      "category": "leave",
      "path_params": {
        "request_id": {
          "type": "uuid",
          "required": true,
          "description": "Leave request ID to cancel"
        }
      },
      "request_body": {},
      "response_fields": ["id", "status", "cancelled_at"],
      "usage_example": "Cancel my pending leave request",
      "requires_data_from": ["LEAVE_MY"]
    },
    "LEAVE_BALANCE": {
      "api_id": "LEAVE_BALANCE",
