    "base_url": "/api/v1"
  },
  "apis": {
    "AUTH_LOGIN": {
      "api_id": "AUTH_LOGIN",
      "name": "Login",
      "description": "Authenticate user with email and password to get access token",
      "short_description": "Login to system",
      "endpoint": "/auth/login",
      "method": "POST",
      "auth_required": false,
      "user_accessible": true,
      "category": "authentication",
      "request_body": {
        "email": {
          "type": "string",
          "required": true,
          "description": "User email address",
          "example": "john.doe@company.com"
        },
        "password": {
          "type": "string",
          "required": true,
          "description": "User password",
          "example": "SecurePass@123"
        }
      },
      "response_fields": ["access_token", "refresh_token", "token_type", "expires_in", "user_id", "role"],
      "usage_example": "I want to login to the system"
    },
    "AUTH_ME": {
      "api_id": "AUTH_ME",
      "name": "Get Current User",
      "description": "Get current authenticated user's profile information including name, email, role, department",
      "short_description": "Get my profile info",
      "endpoint": "/auth/me",
      "method": "GET",
      "auth_required": true,
      "user_accessible": true,
      "category": "authentication",
      "request_body": {},
      "response_fields": ["id", "user_code", "email", "first_name", "last_name", "role", "department", "team_lead_code"],
      "usage_example": "Show my profile details"
    },
    "AUTH_CHANGE_PASSWORD": {
      "api_id": "AUTH_CHANGE_PASSWORD",
