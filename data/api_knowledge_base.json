    "FOOD_ORDER_CREATE": {
      "api_id": "FOOD_ORDER_CREATE",
      "name": "Place Food Order",
      "description": "Place a food order with multiple items. Order is created with pending status.",
      "short_description": "Order food",
      "endpoint": "/food-orders/orders",
      "method": "POST",
      "auth_required": true,
      "user_accessible": true,
      "category": "food_ordering",
      "request_body": {
        "items": {
          "type": "array",
          "required": true,
          "description": "Array of items to order. Each item needs food_item_id from FOOD_ITEMS_LIST",
          "items": {
            "food_item_id": {
              "type": "uuid",
              "required": true,
              "description": "Food item ID (get 'id' field from FOOD_ITEMS_LIST response)"
            },
            "quantity": {
              "type": "integer",
              "required": false,
              "default": 1,
              "description": "Quantity (1-10)"
            },
            "special_instructions": {
              "type": "string",
              "required": false,
              "description": "Special instructions like 'less spicy'"
            }
          }
        },
        "notes": {
          "type": "string",
          "required": false,
          "description": "Order notes like delivery location"
        }
      },
      "response_fields": ["id", "order_number", "status", "total_amount", "items"],
      "usage_example": "Order 2 chicken biryanis and 1 mango lassi",
      "requires_data_from": ["FOOD_ITEMS_LIST"]
    },
