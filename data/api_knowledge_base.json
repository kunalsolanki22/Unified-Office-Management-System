    "CONFERENCE_ROOM_BOOK": {
      "api_id": "CONFERENCE_ROOM_BOOK",
      "name": "Book Conference Room",
      "description": "Book a conference room. Requires manager approval.",
      "short_description": "Book a conference room",
      "endpoint": "/desks/rooms/bookings",
      "method": "POST",
      "auth_required": true,
      "user_accessible": true,
      "category": "desk_booking",
      "request_body": {
        "room_id": {
          "type": "uuid",
          "required": true,
          "description": "ID of conference room to book (get from CONFERENCE_ROOM_LIST API)"
        },
        "booking_date": {
          "type": "date",
          "required": true,
          "description": "Booking date (YYYY-MM-DD)"
        },
        "start_time": {
          "type": "time",
          "required": true,
          "description": "Start time (HH:MM:SS)"
        },
        "end_time": {
          "type": "time",
          "required": true,
          "description": "End time (HH:MM:SS)"
        },
        "title": {
          "type": "string",
          "required": true,
          "description": "Meeting title (e.g., 'AI/ML Team Meeting')",
          "auto_fill": true
        },
        "attendees_count": {
          "type": "integer",
          "required": true,
          "description": "Number of attendees/people for the meeting"
        },
        "description": {
          "type": "string",
          "required": false,
          "description": "Meeting description",
          "auto_fill": true
        },
        "notes": {
          "type": "string",
          "required": false,
          "description": "Additional notes",
          "auto_fill": true
        }
      },
      "response_fields": ["id", "room_id", "status", "booking_date", "start_time"],
      "usage_example": "Book meeting room for tomorrow 2pm to 3pm for 10 people",
      "requires_data_from": ["CONFERENCE_ROOM_LIST"]
    },
