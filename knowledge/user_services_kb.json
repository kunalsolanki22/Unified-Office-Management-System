{
  "version": "1.0.0",
  "description": "Knowledge base for employee/user-level services only. No admin, manager, or team lead actions.",
  "base_url": "http://127.0.0.1:8000/api/v1",
  "auth_header": "Authorization: Bearer <access_token>",
  
  "domains": {
    "authentication": {
      "name": "Authentication",
      "description": "User authentication and profile management",
      "capabilities": [
        "Login to the system",
        "Refresh authentication token",
        "View my profile",
        "Change my password"
      ],
      "apis": [
        {
          "id": "auth_login",
          "name": "Login",
          "description": "Authenticate user and get access token",
          "intent_examples": ["login", "sign in", "authenticate", "log me in"],
          "endpoint": "/auth/login",
          "method": "POST",
          "requires_auth": false,
          "request_body": {
            "required_fields": [
              {
                "name": "email",
                "type": "string",
                "description": "User's email address",
                "validation": "Valid email format"
              },
              {
                "name": "password",
                "type": "string",
                "description": "User's password",
                "validation": "Min 8 characters"
              }
            ]
          },
          "response_fields": ["access_token", "refresh_token", "token_type", "expires_in", "user_id", "role"]
        },
        {
          "id": "auth_refresh",
          "name": "Refresh Token",
          "description": "Renew authentication token",
          "intent_examples": ["refresh token", "renew session", "extend session"],
          "endpoint": "/auth/refresh",
          "method": "POST",
          "requires_auth": false,
          "request_body": {
            "required_fields": [
              {
                "name": "refresh_token",
                "type": "string",
                "description": "Valid refresh token from login"
              }
            ]
          }
        },
        {
          "id": "auth_me",
          "name": "Get My Profile",
          "description": "Get current user's profile information",
          "intent_examples": ["who am I", "my profile", "my details", "show my info"],
          "endpoint": "/users/me",
          "method": "GET",
          "requires_auth": true,
          "request_body": null,
          "notes": "This endpoint is located under /users/me, not /auth/me"
        },
        {
          "id": "auth_change_password",
          "name": "Change Password",
          "description": "Change user's password",
          "intent_examples": ["change my password", "update password", "new password", "reset my password"],
          "endpoint": "/auth/change-password",
          "method": "POST",
          "requires_auth": true,
          "request_body": {
            "required_fields": [
              {
                "name": "current_password",
                "type": "string",
                "description": "Current password",
                "validation": "Min 8 characters"
              },
              {
                "name": "new_password",
                "type": "string",
                "description": "New password",
                "validation": "Min 8 chars, 1 uppercase, 1 lowercase, 1 digit, 1 special char"
              },
              {
                "name": "confirm_password",
                "type": "string",
                "description": "Confirm new password",
                "validation": "Must match new_password"
              }
            ]
          }
        },
        {
          "id": "user_directory",
          "name": "User Directory",
          "description": "Search for employees/colleagues in the company directory",
          "intent_examples": ["find colleague", "search employees", "company directory", "find user", "search for", "look up employee", "who is", "find someone"],
          "endpoint": "/users/directory",
          "method": "GET",
          "requires_auth": true,
          "request_body": null,
          "query_params": [
            {
              "name": "search",
              "type": "string",
              "required": false,
              "description": "Search by name, email, phone, or user code"
            },
            {
              "name": "page",
              "type": "integer",
              "required": false,
              "default": 1,
              "description": "Page number"
            },
            {
              "name": "page_size",
              "type": "integer",
              "required": false,
              "default": 50,
              "description": "Items per page (max: 100)"
            }
          ],
          "response_fields": ["id", "user_code", "email", "first_name", "last_name", "role", "department", "is_active"],
          "notes": "Use search parameter to find specific employees by name, email, or user code"
        }
      ]
    },

    "attendance": {
      "name": "Attendance Management",
      "description": "Check in/out and track work attendance",
      "capabilities": [
        "Check in to work",
        "Check out from work",
        "View my attendance status",
        "Submit attendance for approval",
        "View my attendance history"
      ],
      "apis": [
        {
          "id": "attendance_check_in",
          "name": "Check In",
          "description": "Record work check-in time",
          "intent_examples": ["check in", "mark attendance", "punch in", "start work", "I'm here", "arrived at office", "I have arrived"],
          "endpoint": "/attendance/check-in",
          "method": "POST",
          "requires_auth": true,
          "request_body": null,
          "notes": "Automatically records current time"
        },
        {
          "id": "attendance_check_out",
          "name": "Check Out",
          "description": "Record work check-out time",
          "intent_examples": ["check out", "punch out", "leaving", "going home", "end work", "signing off", "leaving office"],
          "endpoint": "/attendance/check-out",
          "method": "POST",
          "requires_auth": true,
          "request_body": null,
          "notes": "Automatically records current time and finds open check-in"
        },
        {
          "id": "attendance_my_status",
          "name": "My Attendance Status",
          "description": "Get today's attendance status",
          "intent_examples": ["my attendance status", "am I checked in", "attendance today", "work hours today", "my status"],
          "endpoint": "/attendance/my-status",
          "method": "GET",
          "requires_auth": true,
          "request_body": null,
          "response_fields": ["has_attendance", "is_checked_in", "can_submit", "status", "total_hours", "first_check_in", "last_check_out"]
        },
        {
          "id": "attendance_submit",
          "name": "Submit Attendance",
          "description": "Submit today's attendance for approval",
          "intent_examples": ["submit my attendance", "send attendance for approval", "submit today's work", "submit attendance"],
          "endpoint": "/attendance/submit",
          "method": "POST",
          "requires_auth": true,
          "request_body": {
            "optional_fields": [
              {
                "name": "notes",
                "type": "string",
                "description": "Optional submission notes",
                "validation": "Max 500 chars"
              }
            ]
          },
          "notes": "All check-ins must have check-outs before submission"
        },
        {
          "id": "attendance_history",
          "name": "My Attendance History",
          "description": "Get past attendance records",
          "intent_examples": ["my attendance history", "past attendance", "attendance records", "show my attendance"],
          "endpoint": "/attendance/my",
          "method": "GET",
          "requires_auth": true,
          "query_params": [
            {
              "name": "page",
              "type": "integer",
              "default": 1,
              "description": "Page number"
            },
            {
              "name": "page_size",
              "type": "integer",
              "default": 20,
              "description": "Items per page (max 100)"
            },
            {
              "name": "start_date",
              "type": "date",
              "format": "YYYY-MM-DD",
              "description": "Filter from date"
            },
            {
              "name": "end_date",
              "type": "date",
              "format": "YYYY-MM-DD",
              "description": "Filter to date"
            }
          ]
        }
      ]
    },

    "leave": {
      "name": "Leave Management",
      "description": "Apply and manage leave requests",
      "capabilities": [
        "Apply for leave (casual, sick, privilege, unpaid)",
        "Check leave balance",
        "View my leave requests",
        "Cancel my leave request"
      ],
      "leave_types": ["casual", "sick", "privilege", "unpaid"],
      "apis": [
        {
          "id": "leave_apply",
          "name": "Apply for Leave",
          "description": "Submit a leave application",
          "intent_examples": ["apply for leave", "take sick leave", "request vacation", "need day off", "apply casual leave", "I want leave", "book time off"],
          "endpoint": "/leave/requests",
          "method": "POST",
          "requires_auth": true,
          "request_body": {
            "required_fields": [
              {
                "name": "leave_type",
                "type": "string",
                "enum": ["casual", "sick", "privilege", "unpaid"],
                "description": "Type of leave"
              },
              {
                "name": "start_date",
                "type": "date",
                "format": "YYYY-MM-DD",
                "description": "Leave start date"
              },
              {
                "name": "end_date",
                "type": "date",
                "format": "YYYY-MM-DD",
                "description": "Leave end date (must be >= start_date)"
              }
            ],
            "optional_fields": [
              {
                "name": "reason",
                "type": "string",
                "description": "Reason for leave"
              },
              {
                "name": "is_half_day",
                "type": "boolean",
                "default": false,
                "description": "Is this a half-day leave?"
              },
              {
                "name": "half_day_type",
                "type": "string",
                "enum": ["first_half", "second_half"],
                "description": "Required if is_half_day is true"
              },
              {
                "name": "emergency_contact",
                "type": "string",
                "description": "Emergency contact name"
              },
              {
                "name": "emergency_phone",
                "type": "string",
                "description": "Emergency contact phone"
              }
            ]
          }
        },
        {
          "id": "leave_balance",
          "name": "Leave Balance",
          "description": "Check available leave balance",
          "intent_examples": ["my leave balance", "how many leaves left", "available leaves", "check leave balance", "remaining leaves"],
          "endpoint": "/leave/balance",
          "method": "GET",
          "requires_auth": true,
          "query_params": [
            {
              "name": "year",
              "type": "integer",
              "default": "current year",
              "description": "Year to check balance for"
            }
          ]
        },
        {
          "id": "leave_my_requests",
          "name": "My Leave Requests",
          "description": "Get list of my leave requests",
          "intent_examples": ["my leave requests", "leave history", "pending leave requests", "check leave status", "my leaves"],
          "endpoint": "/leave/requests",
          "method": "GET",
          "requires_auth": true,
          "query_params": [
            {
              "name": "page",
              "type": "integer",
              "default": 1
            },
            {
              "name": "page_size",
              "type": "integer",
              "default": 20
            },
            {
              "name": "status",
              "type": "string",
              "enum": ["pending", "approved", "rejected", "cancelled"],
              "description": "Filter by status"
            },
            {
              "name": "leave_type",
              "type": "string",
              "enum": ["casual", "sick", "privilege", "unpaid"],
              "description": "Filter by leave type"
            }
          ]
        },
        {
          "id": "leave_cancel",
          "name": "Cancel Leave",
          "description": "Cancel a pending leave request",
          "intent_examples": ["cancel my leave", "withdraw leave request", "cancel leave application", "cancel leave"],
          "endpoint": "/leave/requests/{request_id}/cancel",
          "method": "POST",
          "requires_auth": true,
          "path_params": [
            {
              "name": "request_id",
              "type": "uuid",
              "description": "Leave request ID to cancel",
              "source": "dependent_api"
            }
          ],
          "request_body": null,
          "notes": "No request body needed - cancels the leave request immediately",
          "dependent_apis": [
            {
              "api_id": "leave_my_requests",
              "purpose": "Get list of user's leave requests to select which one to cancel",
              "filter": {"status": "pending"},
              "present_to_user": true,
              "display_format": "{leave_type} leave: {start_date} to {end_date} ({status})",
              "extract_field": "id"
            }
          ]
        }
      ]
    },

    "desk_booking": {
      "name": "Desk Booking",
