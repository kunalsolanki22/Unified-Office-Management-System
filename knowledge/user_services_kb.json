            {
              "name": "is_active",
              "type": "boolean",
              "default": true
            },
            {
              "name": "page",
              "type": "integer",
              "default": 1
            },
            {
              "name": "page_size",
              "type": "integer",
              "default": 20
            }
          ]
        },
        {
