          "endpoint": "/desks/bookings/{booking_id}",
          "method": "DELETE",
          "requires_auth": true,
          "path_params": [
            {
              "name": "booking_id",
              "type": "uuid",
              "description": "Booking ID to cancel",
              "source": "dependent_api"
            }
          ],
          "request_body": null,
          "dependent_apis": [
            {
              "api_id": "desk_my_bookings",
              "purpose": "Get list of user's desk bookings to select which one to cancel",
              "present_to_user": true,
              "display_format": "{desk_label}: {start_date} to {end_date}",
              "extract_field": "id"
            }
          ]
        }
      ]
    },

    "conference_room": {
